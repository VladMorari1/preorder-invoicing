{
  "vendor": "whola",
  "name": "whola-preorders-mail-service",
  "version": "0.0.2",
  "title": "Whola Mail Service",
  "description": "App which will send email (invoices) notifications about preorder payments",
  "builders": {
    "node": "6.x"
  },
  "dependencies": {},
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/*"
      }
    },
    {
      "name": "template-criar"
    },
    {
      "name": "template-editar"
    }
  ],
  "settingsSchema": {
    "title": "Whola preorder-invoicing",
    "type": "object",
    "properties": {
      "omsAppKey": {
        "title": "OMS App Key",
        "type": "string"
      },
      "omsAppToken": {
        "title": "OMS App Token",
        "type": "string"
      }
    }
  },
  "credentialType": "absolute",
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
